# Seedbed 环境变量配置
# 复制此文件为 .env 并填入实际值

# ============================================
# 数据库配置
# ============================================
# PostgreSQL 连接字符串
DATABASE_URL="postgresql://user:password@localhost:5432/seeder"

# ============================================
# 认证配置
# ============================================
# JWT 签名密钥 (生产环境请使用强密钥，可用 openssl rand -base64 32 生成)
AUTH_SECRET="your-auth-secret-change-in-production"

# ============================================
# Slack Bot 配置
# ============================================

# Slack Bot Token (用于 Slack API 调用)
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_SIGNING_SECRET="your-slack-signing-secret"

# Bot 共享密钥
# 必须与 Slack Bot 项目的 BOT_SECRET 一致
# 用于验证 Slack Bot 发起的 Token 生成请求
BOT_SECRET="your-bot-secret"

# ============================================
# 项目配置
# ============================================

# 服务器上项目仓库的根目录
PROJECTS_ROOT="/data/repos"

# Web 应用 URL (用于 Slack Bot 生成登录链接)
WEB_URL="https://copilot.wildmeta.ai/seeder"

# ============================================
# AI API 配置
# ============================================
# Anthropic Claude API
ANTHROPIC_API_KEY="your-anthropic-api-key"

# MiniMax API (用于 Slack Bot 智能项目匹配)
MINIMAX_API_URL="http://localhost:8000/v1/chat/completions"
MINIMAX_API_KEY="your-minimax-api-key"

# Google Gemini API (可选)
GEMINI_API_KEY="your-gemini-api-key"
